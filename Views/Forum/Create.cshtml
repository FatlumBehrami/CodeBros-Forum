@model CodeBrosForum.Models.Forum.AddForumModel

<div class="container body-content">
    <div class="row"> 
        <div class=""> Create New Forum </div>
    </div>
    <div class="row">
        <form asp-action="AddForum" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title">Forum Title</label>
                <input asp-for="Title" class="form-control" placeholder="Choose forum title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Forum Description</label>
                <input asp-for="Description" class="form-control" placeholder="Write a description about your forum" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Create Forum</button>
        </form>
    </div>
</div>