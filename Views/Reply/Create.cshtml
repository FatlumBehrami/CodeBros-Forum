@model CodeBrosForum.Models.Replies.PostReplyModel

<div class="container body-content">
    <div class='row justify-content-between'>
        <h2 class="h2">Reply | Post : @Model.PostTitle</h2>
        <div class="forum-logo" style="background-image: url(@Model.ForumImageUrl)"></div>
        <span><a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">Back to Post</a> </span>
    </div>
    
    <div class="row col-md-12 justify-content-center">
        <div>
            <div>
                You're submitting this reply as @Model.AuthorName
            </div>

            <form asp-action="AddReply" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class='form-group col-md-12'>
                    <label asp-for="ReplyContent">Reply: </label>
                    <textarea asp-for="ReplyContent" rows="10" class="form-control" placeholder="Your reply..."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success col-md-12">Submit reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
            </form>

        </div>
    </div>
</div>